<div class="columns is-centered mt-6">
    <div class="column is-full ">
        <% @entries.each do |day, entries| %>
            <h3 class="is-size=4 has-text-weight mb-4 has-text-centered">Entries for <%= day %></h3>

            <nav class="level is-mobile">
                <div class="level-item has-text-centered">
                    <div>
                        <p class="heading">Calories</p>
                        <p class="title"><%= entries.pluck(:calories).sum %></p>
                    </div>
                    <div>
                        <p class="heading">Proteins</p>
                        <p class="title"><%= entries.pluck(:proteins).sum %></p>
                    </div>
                    <div>
                        <p class="heading">Carbohydrates</p>
                        <p class="title"><%= entries.pluck(:carbo).sum %>g</p>
                    </div>
                    <div>
                        <p class="heading">Fats</p>
                        <p class="title"><%= entries.pluck(:fats).sum %>g</p>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <div class="columns is-centered mt-6">
    <div class="column is-full">
            <% entries.each do |entry| %>
                <%= link_to entry_path(entry) do %>

                <div class="card">
                    <div class="card-content">
                        <strong><%= entry.meal_type %></strong><br />
                        <%= entry.calories %> calories,
                        <%= entry.proteins %> g protein,
                        <%= entry.carbo %> g carbs,
                        <%= entry.fats %> g fats,
                    </div>
                </div>
                <% end %>
            <% end %>
        <% end %>
    </div>
</div>
        